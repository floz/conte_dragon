@import "nib"

@font-face
  font-family 'Cinzel Decorative', cursive
  font-style normal
  font-weight normal
  src url('fonts/cinzeldecorative-regular-webfont.eot')
  src url('fonts/cinzeldecorative-regular-webfont.eot?#iefix') format('embedded-opentype'),
       url('fonts/cinzeldecorative-regular-webfont.woff') format('woff'),
       url('fonts/cinzeldecorative-regular-webfont.ttf') format('truetype'),
       url('fonts/cinzeldecorative-regular-webfont.svg#cinzel_decorativeregular') format('svg');

@font-face
  font-family 'PT Sans', sans-serif
  font-style normal
  src url( fonts/PT_Sans-Web-Regular.ttf )

@font-face
  font-family 'archiveregular'
  font-style normal
  font-weight normal
  src url('fonts/archive-webfont.eot')
  src url('fonts/archive-webfont.eot?#iefix') format('embedded-opentype'),
      url('fonts/archive-webfont.woff') format('woff'),
      url('fonts/archive-webfont.ttf') format('truetype'),
      url('fonts/archive-webfont.svg#archiveregular') format('svg');

html, body
  width 100%
  height 100%

body
  background-color #163254

.asiat
  font-family 'PT Sans'

#raindrop
  position absolute
  width 100%
  height 100%

.raindrop
  position absolute
  width 3px
  background linear-gradient( top, rgba( 255, 255, 255, 0 ) 10%, rgba( 255, 255, 255, .2 ) 80%, rgba( 255, 255, 255, .5 ) 93%, rgba( 255, 255, 255, .1 ) 98% )
  transform translateZ( 0 )
  backface-visibility hidden
  perspective 1000

#lightbubbles
  position absolute
  width 100%
  height 100%
  top 0
  left 0
  pointer-events none

.lightbubble
  position absolute
  transform translateZ( 0 )
  backface-visibility hidden
  perspective 1000
  border-radius 60px

.lightbubble--blue
  background-color #265995
  opacity .1

.lightbubble--green
  background-color #95bd9c
  opacity .1

.lightbubble--red
  background-color #ff4b71
  opacity .1

#splash
  position absolute
  top 390px
  left 50%
  pointer-events none

.splash
  position absolute
  top -250px
  left -20px

.main_content
  position relative
  background linear-gradient( top, #163254 60%, #194e68 )
  text-align center
  height 100%
  overflow hidden

.title
  position relative
  margin-top 12%
  color #fff

.title_name
  position relative

.title__name__head
  text-transform uppercase
  font-size 18px
  font-family 'archiveregular'
  letter-spacing 0.1em

.title__name__content
  font-size 100px
  font-family 'Cinzel Decorative'

.title__subtitle
  font-size 36px

.title__separator
  position relative
  margin 1.3% auto 0
  background-color #fff
  width 12px
  height 2px

.credits
  position relative
  color #fff
  text-transform uppercase
  font-family 'archiveregular'
  margin-top 1.5%
  a
    color #fff

.credits__title
  font-size 10px
  line-height 1.2

.credits__authors
  font-size 12px

.buttons-play
  position relative
  background url( ../img/bt_bubble_play.png )
  width 131px
  height 161px
  display inline-block
  margin 1.5% auto 0
  text-decoration none

.buttons-play__title
  color #fff
  display block

.buttons-play__title--head
  margin-top 55%
  font-size 36px

.buttons-play__title--content
  font-size 18px
  font-family 'archiveregular'
  letter-spacing 0.1125em

.language
  position relative
  color #fff
  font-family 'archiveregular'
  text-align center
  margin-top 1.5%

.language__title
  font-size 12px

.language__buttons
  overflow hidden
  font-size 10px
  margin-top 0.75%

.language__buttons__button
  display inline-block
  border 2px solid rgba( 255, 255, 255, .5 )
  padding 13px
  margin-right 10px
  border-radius 30px
  text-decoration none
  color rgba( 255, 255, 255, .5 )
  &.selected
    text-decoration underline
    color #fff
  &.last
    margin-right 0
